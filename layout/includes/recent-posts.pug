each article in page.posts.data
  .recent-post-item
    - var link = article.link || article.path
      a.article-title(href=url_for(link))= article.title || _p('no_title')
    if (theme.post_meta.date_type)
      time.post-meta__date #[i.fa.fa-calendar-check-o(aria-hidden="true")] #[=date(article.updated, config.date_format)]
      span.post-meta__separator |
      time.post-meta__date #[i.fa.fa-calendar-o(aria-hidden="true")] #[=date(article.date, config.date_format)]
    .content!= article.excerpt
    a.more(href=url_for(link) + '#more')= _p('read_more')
    hr

